{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/__tests__/components src/__tests__/utils src/__tests__/security/jwt-simple.test.ts",
    "test:unit:watch": "vitest src/__tests__/components src/__tests__/utils src/__tests__/security/jwt-simple.test.ts",
    "test:integration": "vitest run src/__tests__/integration",
    "test:integration:watch": "vitest src/__tests__/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:functional": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "api:validate": "redocly lint openapi.json",
    "api:bundle": "redocly bundle openapi.json --output dist/openapi-bundled.json",
    "api:types": "openapi-typescript openapi.json --output src/types/api-generated.ts",
    "docs:export": "node scripts/export-openapi.js",
    "docs:build": "npm run docs:export && redocly build-docs openapi.json --output=dist/api-docs.html --template=templates/redoc-template.hbs --templateOptions.metaDescription=\"CarConfigurator API Documentation - Comprehensive REST API for vehicle configuration with Robot Framework support\" --templateOptions.currentYear=\"$(date +%Y)\" --title=\"CarConfigurator API\"",
    "docs:preview": "npm run docs:build && open dist/api-docs.html",
    "docs:serve": "npm run docs:build && npx http-server dist -p 8080 -o /api-docs.html",
    "docs:dev": "npm run docs:export && redocly preview-docs openapi.json --port=8081",
    "docs:lint": "redocly lint openapi.json --config redocly.yaml",
    "docs:all": "npm run docs:export && npm run docs:lint && npm run docs:build",
    "env:setup": "./setup-env.sh",
    "env:copy": "cp .env.docker.example .env.production",
    "env:check": "test -f .env.production && echo '✅ .env.production exists' || echo '❌ .env.production missing - run npm run env:setup'",
    "docker:build": "docker build -t carconfigurator .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t carconfigurator:dev .",
    "docker:run": "docker run -p 3000:3000 --name carconfigurator-app carconfigurator",
    "docker:run:dev": "docker run -p 3000:3000 -v $(pwd):/app -v /app/node_modules --name carconfigurator-dev carconfigurator:dev",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:compose:prod": "docker-compose --profile production up -d",
    "docker:logs": "docker-compose logs -f carconfigurator",
    "docker:clean": "docker system prune -a && docker volume prune"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "next": "15.4.1",
    "next-intl": "^4.3.4",
    "next-themes": "^0.4.6",
    "prisma": "^6.12.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/swagger-jsdoc": "^6.0.4",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "http-server": "^14.1.1",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "next-swagger-doc": "^0.4.1",
    "node-fetch": "^3.3.2",
    "openapi-typescript": "^7.8.0",
    "redoc": "^2.5.0",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.27.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "yaml": "^2.8.0"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  }
}
